    <% function formatDate(dateObject) { 
      let d=new Date(dateObject); 
      let day=d.getDate(); 
      let month=d.getMonth() + 1; 
      let year=d.getFullYear();
      if (day < 10) { 
        day="0" + day; 
      } 
      if (month < 10) { 
        month="0" + month; 
      }
      let date=year + "-" + month + "-" + day; return date; 
    };%>
    
    <section class="pt-3 justify-content-center position-relative ">
           
