<html>

<head>
  <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/blogcss.css" />
    <script>
      function disableSubmitButton() {
        alert('Sorry!! Time slot is allready booked.');
      }
    </script>
  <style>
    .full-width-img {
      width: 10%;
      height: 7%;
      object-fit: cover;
    }
  </style>
  <%- include('../views/partials/links'); %>

</head>

<body>

  <!-- header part -->

  <nav class="navbar navbar-expand-lg bg-primary navbar-light">
    <div class="container mt-1">
      <img class="img-fluid full-width-img" src="img/logo.jpg">
      <h3 class="text-white ml-2">PPG GROUP OF INSTITUTIONS</h3>

    <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapsenavbar">
      <span class="navbar-toggler-icon "></span>
    </button>
    <div class="collapse navbar-collapse text-center" id="collapsenavbar">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item px-2">
          <a href="/schedule" class="nav-link text-white"> HOME </a>
        </li>
        <li class="nav-item px-2">
          <a href="/room" class="nav-link text-white"> HALL </a>
        </li>
        <li class="nav-item px-2">
          <a href="/galleryview" class="nav-link text-white"> GALLERY </a>
        </li>
        <li class="nav-item px-2">
          <a href="/mybooking" class="nav-link text-white"> MY BOOKING </a>
        </li>
        <li class="nav-item px-2">
          <a href="/alladmin" class="nav-link text-white"> ADMINS </a>
        </li>
        <li class="nav-item px-2">
          <a href="/logout" class="nav-link text-white"> LOGOUT </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

        <nav class="navbar navbar-expand-lg bg-white mt-3">
          <div class="container">
        
            <div class="collapse navbar-collapse text-center" id="collapsenavbar">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item px-4">
                  <button type="button" class="btn btn-secondary p-0"><a href="/addroom" class="nav-link text-white"> Add
                      Hall </a></button>
                </li>
              </ul>
            </div>
          </div>
        </nav>

  <!-- page content -->

  <section class="pt-3 justify-content-center position-relative ">

    <div class="container">
      <% if(message != ' ') { %> <script> disableSubmitButton(); </script> <% } %>
      <%= message %>
      <div class="row justify-content-center">
        <% buses.forEach(bus=> { %>
          <div class="card">
          <img class="card-img-top" src="<%= bus.photo %>">
          <div class="card-body">
            <p class="card-title">
              <h5><%= bus.roomname %> </h5>
            </p>
              <div class="float-right">
                <a href="/bookingpage/<%= bus._id %>" class="btn btn-primary ml-3">BOOK</a>
                <% if(role==='hallscheduling.ppg@gmail.com' ) { %>
                <a href="/room/<%= bus._id %>" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"
                    style="font-size:22px; color:white;"></i></a>
                <% } %>
              </div>
            </div>
          </div>
          <% }) %>
      </div>

    </div>

    </div>

  </section>
  <%- include('../views/partials/footer'); %>

</body>

</html>